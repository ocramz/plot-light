name:                plot-light-examples
version:             0.1.0.0
synopsis:            Example binaries for plot-light
description:         Example binaries for plot-light
homepage:            https://github.com/ocramz/plot-light-examples
license:             BSD3
license-file:        LICENSE
author:              Marco Zocca
maintainer:          zocca.marco gmail
copyright:           2018 Marco Zocca
category:            Graphics
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10
tested-with:         GHC == 8.0.2, GHC == 8.2.2
data-dir:            data
data-files:          forex
                     heatmap-bw                     

executable scatter
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:      app/scatter
  main-is:             Main.hs
  build-depends:       base >= 4.7 && < 5
                     , plot-light >= 0.2.9
                     , attoparsec
                     , text
                     , colour
                     , blaze-svg
                     , scientific
                                          
executable timeseries
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:      app/timeseries
  main-is:             Main.hs
  build-depends:       base >= 4.7 && < 5
                     , plot-light >= 0.2.9
                     , attoparsec
                     , attoparsec-time >= 1
                     , time
                     , text
                     , colour
                     , blaze-svg
                     , scientific

executable heatmap
  default-language:    Haskell2010
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:      app/heatmap
  main-is:             Main.hs
